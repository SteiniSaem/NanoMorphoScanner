%{
	import java.io.*;
%}

%token <sval> NAME, VAR, OPNAME, LITERAL

%%

program
	:	function
	;

function
	:	NAME '(' args ')' '{' D E '}'
	;

args
	:	expr_star
	;

expr_star
	:	expr_plus
	|
	;

expr_plus
	:	expr ',' expr_plus
	|	expr
	;

D
	:	decl ';' D
	|
	;

E
	:	expr ';' E
	|
	;


decl
	:	VAR NAME N
	;

N
	:	',' NAME N
	|
	;

expr
	:	'return' expr
	|	NAME '=' expr
	|	binopexpr
	;

binopexpr
	:	smallexpr OS
	;

OS
	:	OPNAME smallexpr OS
	|
	;

smallexpr
	:	NAME
	|	NAME '(' A ')'
	|	OPNAME smallexpr
	|	LITERAL
	|	'(' expr ')'
	|	ifexpr
	|	'while' '(' expr ')' body
	;


A
	:	A expr B
	|	expr B
	;

B
	:	B ',' expr
	|
	;


ifexpr
	:	'if' '(' expr ')' body
	|	EI
	|	EL
	;


EI
	:	E 'elsif' expr body
	|
	;

EL
	: EL 'else' body
	| 'else' body
	;

body
	:	'{' E '}'
	;










